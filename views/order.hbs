<h2>訂單內容</h2>
<br /><br />
<div class="container">
  {{#each order}}

  <div class="card">
    <div class="row no-gutters">
      <div class="col-auto">
        <img src="{{this.image}}" class="img-fluid" alt="Card image cap" width="143px" height="90px">
      </div>
      <div class="col">
        <div class="card-block px-2">
          <h4 class="card-title">{{this.name}}</h4>
          {{!-- <p class="card-text">Description</p> --}}
          <p class="card-text"><small class="text-muted">x {{this.quantity}}</small></p>
        </div>
        <div class="text-right mr-3 mb-3">${{this.price}}</div>
      </div>
    </div>
  </div>
  <br />
  {{/each}}
</div>


<br /><br />
<a class="text-right" href="javascript:history.back()">回上一頁</a>