<h1>最新動態</h1>
<hr />
<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        最新商品
      </div>
      <div class="card-body">
        {{#each products}}
        <div>
          <h4>
            <a href="/products/{{this.id}}">{{this.name}}</a>
            <small>{{this.Category.name}}</small>
          </h4>
          <p>{{this.description}}</p>
          {{moment this.createdAt}}
          <hr>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        最新評論
      </div>
      <div class="card-body">
        {{#each comments}}
        <div>
          <h4>
            <a href="/products/{{this.Product.id}}">{{this.Product.name}}</a>
          </h4>
          <p>{{this.text}}</p>
          by <a href="/users/{{this.User.id}}">{{this.User.name}}</a>
          at {{moment this.createdAt}}
          <hr>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>