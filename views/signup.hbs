<form class="form-signin" action="/signup" method="POST" style="width: 100%;">
  <div class="text-center mb-4">
    <h1 class="h3 mb-3 font-weight-normal">Sign Up</h1>
  </div>
  <div class="form-label-group">
    <label for="name">Name</label>
    <input type="text" name="name" id="name" class="form-control" placeholder="Name" required autofocus>
  </div>
  <div class="form-label-group">
    <label for="email">Email</label>
    <input type="text" name="email" id="email" class="form-control" placeholder="Email" required autofocus>
  </div>
  <div class="form-label-group">
    <label for="password">Password</label>
    <input type="password" name="password" id="password" class="form-control" placeholder="Password" required>
  </div>
  <div class="form-label-group">
    <label for="passwordCheck">Password Check</label>
    <input type="password" name="passwordCheck" id="passwordCheck" class="form-control" placeholder="Password Check"
      required>
  </div>
  <div class="form-label-group">
    <label for="image">Image</label>
    <input type="file" class="form-control-file" id="image" name="image">
  </div>
  <br />
  <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
  <div class="text-center mb-4">
    <p><a href="/signin">Sign In</a></p>
  </div>
  <p class="mt-5 mb-3 text-muted text-center">Â© 2017-2018</p>
</form>